<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:viewBindingIgnore="false"
    android:layout_height="match_parent"
    android:background="#7F000000">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="657dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingStart="40dp"
            android:paddingEnd="40dp">

            <EditText
                android:id="@+id/followMessageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/follow_dialog_edit"
                android:hint="Add a Message..."
                android:inputType="text"
                android:textColor="@color/earthLighterDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialogFollowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/connect_follow_btn"
                android:text="Follow"
                android:layout_marginTop="20dp"
                android:textColor="@color/earthLightestDark" />

            <TextView
                android:id="@+id/cancelFollowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cancel"
                android:textColor="@color/earthGreen"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>