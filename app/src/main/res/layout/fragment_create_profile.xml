<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/earthDark"
    tools:context=".ui.CreateProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="128dp"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/createH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Let's create your profile!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/earthGreen"
                android:textSize="36sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="339dp"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/earthGreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Name"
                android:background="@drawable/fields_round_corner"
                android:minHeight="48dp"
                android:nextFocusDown="@+id/passwordEditText"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/BirthdayLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthday(MM/DD/YYYYY)"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/earthGreen"
                android:textSize="20sp"
                android:layout_margin="10dp"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/BirthdayEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="04/23/1997"
                android:background="@drawable/fields_round_corner"
                android:minHeight="48dp"
                android:nextFocusDown="@+id/passwordEditText"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/earthGreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="San Francisco"
                android:background="@drawable/fields_round_corner"
                android:minHeight="48dp"
                android:nextFocusDown="@+id/passwordEditText"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/pronounsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pronouns"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/earthGreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pronounsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="She/Her"
                android:background="@drawable/fields_round_corner"
                android:minHeight="48dp"
                android:nextFocusDown="@+id/passwordEditText"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/websiteLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/earthGreen"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/WebsiteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:hint="juliahill.com"
                android:background="@drawable/fields_round_corner"
                android:minHeight="48dp"
                android:nextFocusDown="@+id/passwordEditText"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/MyStoryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Story"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/earthGreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/MyStoryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textMultiLine"

                android:gravity="start"
                android:background="@drawable/fields_round_corner"
                android:minHeight="250dp"

                android:nextFocusDown="@+id/passwordEditText"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>